extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-3
					.thumbnail
						a(href="/movie/#{item._id}")
							img(src="#{item.poster}", alt="#{item.title}", width=200, height=300)
						.caption
							h4 #{item.title}
							p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") Watch Trailer

